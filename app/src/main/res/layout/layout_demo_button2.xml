            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/shape_tab_9"
            android:textColor="@color/colorText"
            android:textSize="15sp"
            app:shapeRipple="true"
            app:shapeSelectorPressedColor="#e5e5e5"
            app:shapeTopIcon="@drawable/ic_test2"
            app:shapeTopIconSize="30dp" />

