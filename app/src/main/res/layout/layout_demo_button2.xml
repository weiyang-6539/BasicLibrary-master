    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp">

        <com.github.android.common.widget.shape.extend.ComplexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:tag="button"
            android:text="店铺"
            android:textColor="#999"
            android:textSize="13sp"
            app:shapeIconPadding="0dp"
            app:shapeTopIcon="@drawable/ic_shop" />

        <com.github.android.common.widget.shape.extend.ComplexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="客服"
            android:textColor="#999"
            android:textSize="13sp"
            app:shapeIconPadding="0dp"
            app:shapeTopIcon="@drawable/ic_service" />

        <com.github.android.common.widget.shape.extend.ComplexView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:text="收藏"
            android:textColor="#999"
            android:textSize="13sp"
            app:shapeIconPadding="0dp"
            app:shapeTopIcon="@drawable/ic_favorites" />

        <com.github.android.common.widget.shape.extend.ComplexView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:text="加入购物车"
            android:textColor="@android:color/white"
            app:shapeCornersBotLeftRadius="40dp"
            app:shapeCornersTopLeftRadius="40dp"
            app:shapeGradientEndColor="#F88904"
            app:shapeGradientStartColor="#F6CF9F"
            app:shapeSelectorPressedColor="#88F19D39" />

        <com.github.android.common.widget.shape.extend.ComplexView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="40dp"
            android:text="立即购买"
            android:textColor="@android:color/white"
            app:shapeCornersBotRightRadius="40dp"
            app:shapeCornersTopRightRadius="40dp"
            app:shapeGradientStartColor="#F15D06"
            app:shapeGradientEndColor="#EDA174"
            app:shapeSelectorPressedColor="#88EE762F" />
