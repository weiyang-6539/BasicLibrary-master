<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_radius5"
    android:orientation="horizontal">

    <com.github.android.common.widget.shape.extend.ComplexView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:minWidth="60dp"
        android:text="赞"
        app:shapeIconPadding="3dp"
        app:shapeStartIcon="@drawable/ic_favorites"
        app:shapeStartIconSize="15dp"
        app:shapeTextNormalColor="@android:color/white" />

    <com.github.android.common.widget.shape.extend.ComplexView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:minWidth="60dp"
        android:text="评论"
        app:shapeIconPadding="3dp"
        app:shapeStartIcon="@drawable/ic_comment"
        app:shapeStartIconSize="15dp"
        app:shapeTextNormalColor="@android:color/white" />
</LinearLayout>